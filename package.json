{
  "name": "my-film-list-server",
  "version": "0.2.0",
  "description": "My-film-list",
  "author": "Stanislau Shliakhtsich",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "yarn": ">=1.22",
    "node": ">=16.3.0"
  },
  "scripts": {
    "prebuild": "rimraf backend/dist && rimraf frontend/build",
    "prestart": "rimraf backend/dist && rimraf frontend/build",
    "postinstall": "husky install && cd backend && yarn && cd ../frontend && yarn",
    "client:start": "cd frontend && yarn start",
    "build": "cd backend && yarn build && cd ../client && yarn build",
    "start": "yarn start:dev",
    "start:dev": "cd backend && nest start --watch",
    "start:debug": "cd backend && nest start --debug --watch",
    "start:prod": "node backend/dist/main",
    "lint": "cd backend && yarn lint",
    "lint:fix": "eslint --fix \"{backend,frontend}/**/*.ts\"",
    "prettier:check": "prettier --check \"backend/src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:fix": "prettier --write \"backend/src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "cd backend && yarn type-check"
  },
  "dependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}